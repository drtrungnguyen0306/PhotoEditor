<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_black_white"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="@string/title_make_video"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_30"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_list_combine"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:background="@color/color_red"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_combine_photo"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view_combining_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_80">

            <ImageView
                android:id="@+id/image_audio_combine"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:background="@color/color_deep_purple"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_combine_audio"/>

            <TextView
                android:id="@+id/text_combining_audio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_25"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_combine_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/action_combine"/>

</LinearLayout>